@model IEnumerable<Shop_Mobi.Databases.tbl_sanpham>
@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Thêm Mới", "Create")
</p>
<div class="box-body">
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    STT
                </th>
                <th>
                    Nhà Sản Xuất
                </th>
                <th>
                    Tên Sản Phẩm
                </th>
                <th>
                    Giá
                </th>
                <th>
                    Số Lượng
                </th>
                <th>
                    ROM
                </th>
                <th>
                    RAM
                </th>
                <th>
                    Pin
                </th>
                <th>
                    Camera
                </th>
                @*<th>
                Bluetooth
            </th>*@
                <th>
                    Thẻ Nhớ
                </th>
                <th>
                    Hiển thị
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(Item => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tbl_nhasanxuat.ten)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ten)<br />
                        <img src="@item.tbl_anh.ToList()[0].duongdan" width="80" height="120" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.gia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.soluong)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ROM)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RAM)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.pin)
                    </td>
                    <td>
                        Trước: @Html.DisplayFor(modelItem => item.camera_truoc) | Sau: @Html.DisplayFor(modelItem => item.camera_sau)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.bluetooth)
                    </td>*@
                    <td>
                        @( item.thenho == "1" ? "có hỗ trợ" : "không hỗ trợ")
                    </td>
                    <td>
                        <input type="checkbox" value="@item.tinhtrang" @(item.tinhtrang ==1 ? "checked=\"checked\"" : "")/>@(item.tinhtrang == 1 ? "có" : "không")
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.id })
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>
                    STT
                </th>
                <th>
                    Nhà Sản Xuất
                </th>
                <th>
                    Tên Sản Phẩm
                </th>
                <th>
                    Giá
                </th>
                <th>
                    Số Lượng
                </th>
                <th>
                    ROM
                </th>
                <th>
                    RAM
                </th>
                <th>
                    Pin
                </th>
                <th>
                    Camera
                </th>
                @*<th>
                    Bluetooth
                </th>*@
                <th>
                    Thẻ Nhớ
                </th>
                <th>
                    Hiển thị
                </th>
                <th></th>
            </tr>
        </tfoot>
    </table>
</div>

